@using BlazorSpaces
@inherits AnchoredComponentBase

<Space Id="@Id" ClassName="@ClassName" Style="@Style" As="@As" CenterContent="@CenterContent" ZIndex="@ZIndex"
    Scrollable="@Scrollable" TrackSize="@TrackSize" Type="@SpaceType.Anchored" Anchor="@AnchorType.Right"
    Position="@position">
    @ChildContent
</Space>

@code {
    public PositionalProps position => new PositionalProps
    {
        Right = "0",
        Top = "0",
        Bottom = "0",
        Width = Size
    };
}
